<%- model_class = Transfer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:account_id) %>:</strong></dt>
  <dd><%= @transfer.account_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= Extenso.real_formatado( @transfer.amount ) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:account_to) %>:</strong></dt>
  <dd><%= @transfer.account_to %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              transfers_path, :class => 'btn btn-default'  %>
